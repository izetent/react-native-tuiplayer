<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:id="@+id/tuiplayer_overlay_bottom_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:id="@+id/tuiplayer_overlay_panel_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingBottom="20dp"
            android:clickable="true"
            >

            <!-- Left Side (75%) - Starts from bottom -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:gravity="bottom"
                android:paddingStart="15dp"
                android:paddingEnd="10dp"
                >

                <!-- Album Art + Title Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="10dp">

                    <!-- Album Art Placeholder -->
                    <ImageView
                        android:id="@+id/tuiplayer_overlay_album_art"
                        android:layout_width="48dp"
                        android:layout_height="64dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/tui_overlay_album_art_bg"
                        android:clipToOutline="true"
                        android:outlineProvider="background"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="Episode Cover"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tuiplayer_overlay_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Love Me Bite Me >"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:shadowColor="#80000000"
                            android:shadowDx="0"
                            android:shadowDy="1"
                            android:shadowRadius="1.5"
                            android:singleLine="true"
                            android:ellipsize="end"/>

                        <!-- Type Text -->
                        <TextView
                            android:id="@+id/tuiplayer_overlay_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text=""
                            android:textColor="#CCFFFFFF"
                            android:textSize="18sp"
                            android:shadowColor="#80000000"
                            android:shadowDx="0"
                            android:shadowDy="1"
                            android:shadowRadius="1.5"
                            android:maxLines="2"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Description -->
                    <TextView
                        android:id="@+id/tuiplayer_overlay_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:shadowColor="#80000000"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="1.5"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginBottom="10dp"/>

                <!-- Play Button -->
                <LinearLayout
                    android:id="@+id/tuiplayer_overlay_play_btn"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/tui_overlay_play_bg_rounded"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/tui_ic_play_custom"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="Play"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Play"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:shadowColor="#80000000"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="1.5"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Right Side (25%) -->
            <LinearLayout
                android:id="@+id/tuiplayer_overlay_action_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:gravity="end|bottom"
                android:paddingEnd="10dp"
              >

                <!-- Collect (was Favorite) -->
                <LinearLayout
                    android:id="@+id/tuiplayer_overlay_favorite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="15dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/tuiplayer_overlay_favorite_icon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/tui_ic_collect_custom"
                        android:contentDescription="Collect"/>

                    <TextView
                        android:id="@+id/tuiplayer_overlay_favorite_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="36dp"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:paddingHorizontal="2dp"
                        android:text="19.2K"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:shadowColor="#80000000"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="1.5"/>
                </LinearLayout>

                <!-- Like -->
                <LinearLayout
                    android:id="@+id/tuiplayer_overlay_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginBottom="15dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/tuiplayer_overlay_like_icon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/tui_ic_like_custom"
                        android:contentDescription="Like"/>

                    <TextView
                        android:id="@+id/tuiplayer_overlay_like_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="36dp"
                        android:gravity="center"
                        android:includeFontPadding="false"
                        android:paddingHorizontal="2dp"
                        android:text="19K"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:shadowColor="#80000000"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="1.5"/>
                </LinearLayout>

                <!-- More (was Comment) -->
                <LinearLayout
                    android:id="@+id/tuiplayer_overlay_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/tuiplayer_overlay_comment_icon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@drawable/tui_ic_more_custom"
                        android:contentDescription="More"/>

                    <TextView
                        android:id="@+id/tuiplayer_overlay_comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="More"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp"
                        android:shadowColor="#80000000"
                        android:shadowDx="0"
                        android:shadowDy="1"
                        android:shadowRadius="1.5"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <com.tuiplayer.shortvideo.layer.TuiplayerProgressBarView
            android:id="@+id/tuiplayer_overlay_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="10dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/tuiplayer_overlay_pause_indicator"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_gravity="center"
        android:background="@drawable/tui_overlay_pause_bg"
        android:scaleType="center"
        android:visibility="gone"
        android:src="@drawable/tui_ic_play_custom"
        android:tint="#FFFFFF"
        android:contentDescription="@null" />

</FrameLayout>
